<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/page_my_waves_ek5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:id="@+id/top_ek2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp">

            <View
                android:id="@+id/background_ek16"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/background_ek16_shape" />

            <ImageButton
                android:id="@+id/add_ek2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="280dp"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="23dp"
                android:background="#FFFFFF"
                android:contentDescription="add_ek2"
                android:scaleType="fitCenter"
                android:src="@drawable/add_ek2" />

            <TextView
                android:id="@+id/my_waves_ek7"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="116dp"
                android:layout_marginTop="20dp"
                android:fontFamily="Roboto"
                android:gravity="center"
                android:text="My Waves"
                android:textColor="#1c1c1c"
                android:textSize="26sp" />


        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="60dp"
            android:id="@+id/recycle_option"
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="match_parent"
            >

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</RelativeLayout>

