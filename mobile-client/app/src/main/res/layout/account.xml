<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp">

        <RelativeLayout
            android:id="@+id/top_ek9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp">

            <View
                android:id="@+id/background_ek24"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/background_ek24_shape" />

            <TextView
                android:id="@+id/account_ek9"
                android:layout_width="103dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="127dp"
                android:layout_marginTop="20dp"
                android:fontFamily="Roboto"
                android:gravity="center"
                android:text="Account"
                android:textColor="#1c1c1c"
                android:textSize="26sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/content_ek1"
            android:layout_width="279dp"
            android:layout_height="616dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="111dp">


            <RelativeLayout
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="80dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:id="@+id/picture"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="-9dp"
                    android:contentDescription="picture"
                    android:src="@drawable/picture" />

                <TextView
                    android:id="@+id/david_zakrzewski"
                    android:layout_width="165dp"
                    android:layout_height="28dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="130dp"
                    android:fontFamily="Roboto"
                    android:gravity="center"
                    android:text="David Zakrzewski"
                    android:textColor="#1c1c1c"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/sign_out"
                    android:layout_width="73dp"
                    android:onClick="signOut"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="164dp"
                    android:fontFamily="Roboto"
                    android:gravity="center"
                    android:text="Sign out"
                    android:textColor="#d44638"
                    android:textSize="18sp" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/items_ek2"
                android:layout_width="253dp"
                android:layout_height="301dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="287dp">

                <Button
                    android:id="@+id/callGraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:background="#00a1f1"
                    android:onClick="launchGraph"
                    android:text="Microsoft Graph Sign in"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/twitter_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:onClick="launchTwitter"
                    android:background="@color/tw__composer_blue"
                    android:textColor="@color/tw__composer_white"
                    android:text="Twitter Sign in" />

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/facebook_login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="30dp" />

                <Button
                    android:id="@+id/facebook_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/tw__composer_white"
                    android:background="@color/tw__composer_blue"
                    android:text="Facebook Sign out"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/intra_launch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="90dp"
                    android:onClick="launchIntra"
                    android:textColor="@color/tw__composer_white"
                    android:background="@color/tw__composer_blue"
                    android:text="Epitech Intra" />

                <Button
                    android:id="@+id/intra_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="90dp"
                    android:onClick="launch_intra"
                    android:background="@color/tw__composer_blue"
                    android:textColor="@color/tw__composer_white"
                    android:text="Sign out Epitech Intra"
                    android:visibility="invisible" />
                <Button
                    android:id="@+id/meteo_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="190dp"
                    android:onClick="launchMeteo"
                    android:background="@color/tw__composer_blue"
                    android:textColor="@color/tw__composer_white"
                    android:text="Sign in Weather" />
                <Button
                    android:id="@+id/meteo_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="190dp"
                    android:background="@color/tw__composer_blue"
                    android:textColor="@color/tw__composer_white"
                    android:visibility="invisible"
                    android:text="Sign out Weather" />

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>
